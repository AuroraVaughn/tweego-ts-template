{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./project/compiled",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],

  "typeRoots": ["./types", "./node_modules/@types"]
}
